<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/transaction_constraint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:padding="16dp"
    >

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/transaction_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="teste"
            app:layout_constraintTop_toTopOf="@+id/transaction_constraint"
            app:layout_constraintLeft_toLeftOf="@+id/transaction_constraint"
            app:layout_constraintBottom_toBottomOf="@+id/transaction_constraint"
            tools:layout_editor_absoluteX="16dp" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/transaction_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1313"
            app:layout_constraintTop_toTopOf="@+id/transaction_constraint"
            app:layout_constraintRight_toRightOf="@+id/transaction_constraint"
            app:layout_constraintBottom_toBottomOf="@+id/transaction_constraint"
            tools:layout_editor_absoluteX="16dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</com.google.android.material.card.MaterialCardView>